          },
          "description": {
            "type": "string"
          },"category": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          
          "quantityInStock": {
            "type": "number"
          },
          "manufacturer": {
            "type": "string"
          },
          "supplier": {
            "type": "string"
          },
          "dateAdded": {
            "type": "string"
          }
          
        }
      }
    }
  }
  